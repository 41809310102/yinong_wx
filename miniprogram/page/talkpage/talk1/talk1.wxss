



.category {
  justify-items: center;
  align-items: center;
  margin: 10rpx 20rpx;
  height: 200rpx;
  border-radius: 15rpx;
  background-color: rgba(31, 30, 29, 0.336);
  display: flex;
}

.category-child {
  display: flex;
  height: 250rpx;
  width: 250rpx;
  justify-items: center;
  align-items: center;
  
}

.category-child image {
  width: 250rpx;
  height: 200rpx;
  
}

.ago_price {
  text-decoration: line-through;
  margin-top: 20rpx;
  opacity: 0.7;
  height: 30rpx;
  font-size: 28rpx;
}

.category-next-child {
  margin-top: 20rpx;
  font-size: 30rpx;
  overflow: hidden;/*隐藏溢出的文本*/
  width: 400rpx;/*必须加上固定的宽度*/
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all; /* 自动换行 */
}

.category-next {
  margin-left: 40rpx;
}

.newest-text-child {
  opacity: 0.5;
  display: flex;
  width: 140rpx;
  /* margin-top: 8rpx; */
  margin-left: 10rpx;
  font-size: 23rpx;
  color: black;
}

.newest-text {
  display: flex;
  font-size: 30rpx;
  color: #e6343a;
  margin-top: 30rpx;
  align-items: center;
  width: 400rpx;
  justify-items: center;
}
.cruuent_price{
  width: 800rpx;
  font-size: 20rpx;
}



