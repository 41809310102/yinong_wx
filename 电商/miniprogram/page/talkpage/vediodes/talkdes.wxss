page {
  background-color: #f3f3f3;
}
.banner {
  width: 100%;
  height: 500rpx;
}
.text {
  display: flex;
  flex-direction: column;
  padding-left: 40rpx;
  background-color: #fff;
}
.text > .text_bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.body {
  margin-top: 20rpx;
  background-color: #fff;
  margin-bottom: 50rpx;
}
.body_top {
  display: flex;
  flex-direction: row;
  /* align-items: center; */
  /* justify-content: center; */
  height: 100rpx;
  width: 50%;
  margin: 0 auto;
  justify-content: center;
}
.body_top > view > text {
  font-size: 35rpx;
}
.body_top > .body_top_left, .body_top_right {
  margin-top: 15rpx;
}
.line {
  height: 15rpx;
  width: 80rpx;
  background-color: green;
  margin: 0 auto;
  margin-top: 20rpx;
  border-radius: 20rpx;
}
.body_middle {
  /* display: flex;
  flex-direction: row; */
  width: 100%;
  margin-bottom: 120rpx;
}
.img_text{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.img_text > image {
  width: 60rpx;
  height: 60rpx;
  margin:20rpx 10rpx 20rpx 20rpx
}
.img_text > text {
  font-size: 28rpx;
  color: orange;
}
.body_middle > .pinglun_bottom > textarea {
  margin: 0 auto;
  width: 90%;
  height: 200rpx;
  border: 1rpx solid black;
}
.body_middle > .pinglun_bottom > .button {
  background-color: orange;
  color: #fff;
  width: 80rpx;
  padding: 10rpx 30rpx;
  margin: 10rpx 10rpx 10rpx auto;
  text-align: center;
  margin-bottom: 20rpx;
}
.body_middle > .pinglun_middle {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.body_middle > .pinglun_middle > .neirong {
  display: flex;
  flex-direction: row;
}
.body_middle > .pinglun_middle > .neirong > image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin: 20rpx;
}
.body_middle > .pinglun_middle > .neirong > .texts {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.body_middle > .pinglun_middle > .neirong > .texts > .name_time{
  display: flex;
  flex-direction: row;
}


.bottom {
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 100rpx;
  position: fixed;
  bottom: 0;
}
.bottom_left {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  background-color: rgba(238, 197, 14, 0.726);
  color: #fff;
  width: 50%;
  border-radius: 20px;
}
.bottom_left > image {
  width: 50rpx;
  height: 50rpx;
}
.bottom_right {
  background-color: rgb(238, 183, 2);
  color: #fff;
  text-align: center;
  width: 50%;
  line-height: 100rpx;
  border-radius: 20px;
}